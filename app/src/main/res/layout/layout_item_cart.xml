<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardElevation="15dp">


    <!--fix color-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/cart_thumbnail"
                    android:layout_width="128dp"
                    android:layout_height="120dp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/cart_foodname"
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/cart_thumbnail"
                    android:layout_weight="9"
                    android:text="Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="@dimen/bt_default_text_size" />

                <TextView
                    android:id="@+id/dollar_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_foodname"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/cart_thumbnail"
                    android:text="$"
                    android:textColor="#DFFF5D5D" />

                <TextView
                    android:id="@+id/cart_foodprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_foodname"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/cart_thumbnail"
                    android:text="Price"
                    android:textColor="#DFFF5D5D"/>

                <TextView
                    android:id="@+id/x_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_foodname"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/cart_thumbnail"
                    android:text="x" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_foodname"
                    android:layout_marginLeft="73dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/cart_thumbnail"
                    android:text="Q" />

                <TextView
                    android:id="@+id/sub_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_foodname"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@id/cart_thumbnail"
                    android:text="sub total" />

                <Button
                    android:id="@+id/delete_item"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="5dp"
                    android:drawableLeft="@drawable/ic_close"
                    android:padding="3dp"
                    app:backgroundTint="#ffaa00" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>