<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".Upload_Activity">

    <TextView
        android:id="@+id/tv_uf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Upload Your Cooked Food"
        android:textColor="@color/dark_orange"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_view"
        android:layout_width="208dp"
        android:layout_height="177dp"
        android:layout_below="@+id/tv_uf"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp" />

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_view"
        android:layout_marginTop="21dp"
        android:background="@color/little_bit_yellow"
        android:text="Choose Image" />


    <EditText
        android:id="@+id/et_fname"
        android:layout_width="236dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_choose"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="Enter Food Name Here" />

    <EditText
        android:id="@+id/et_fdesc"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_below="@+id/et_fname"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="Enter Food Description Here" />


    <EditText
        android:id="@+id/et_fprice"
        android:layout_width="226dp"
        android:layout_height="62dp"
        android:layout_below="@+id/et_fdesc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="Enter Food Price Here" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fprice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_salmon"
        android:inputType="numberDecimal"
        android:text="Upload Image" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/tv_uf"
        android:indeterminate="false"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="0" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fprice"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@+id/btn_upload"
        android:text="Return"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="270dp"
        android:layout_toStartOf="@+id/et_fname"
        android:text="Name" />

    <TextView
        android:layout_width="84dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="196dp"
        android:text="Description" />

    <TextView
        android:layout_width="83dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="109dp"
        android:layout_toStartOf="@+id/et_fname"
        android:text="Price" />

</RelativeLayout>
